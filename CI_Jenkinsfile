pipeline {
	agent any
	tools {
		maven 'Maven'
		jdk 'JDK-8'
	}
	stages {
		stage('Build') {
			steps {
				echo 'Building...'
				sh 'mvn -B -DskipTests clean package -f technical-challenge/pom.xml'
			}
		}
		stage('Test') {
			steps {
				echo 'Testing...'
				sh 'mvn -B  -Dspring.profiles.active=prod test -f technical-challenge/pom.xml'
			}
		}
	}
	post {
        always {
            junit '**/target/surefire-reports/*.xml'
        }
        failure {
            mail to: cegard689@gmail.com, subject: 'The Pipeline failed :('
        }
    }
}